<!-- index.nunjucks -->
{% extends "layouts/layout.njk" %}

{% block content%}

<div class="login-page">
    <div class="login box box--menta">
        <a class="login__logo" href="/ctxt">
            <img src="./images/logos/logo_ctxt.png" alt="CTXT">
        </a>
        <div class="login__form">
            <h1 class="h5">Inicia sesión</h1>
            <form action="">
                <input type="text" name="name" id="name">
                <input type="password" name="password" id="password">
            </form>
            <p><a href="#">¿Olvidaste la contraseña?</a></p>
            <p><a href="#" class="button button--default--bg">Entra</a></p>
            <p>Si no tienes todavía, <a href="#">Crea tu cuenta</a></p>
            <div class="login__ventajas">
                <p class="login__ventajas__title">Ventajas de crear una cuenta</p>
                <p>Cuando creas una cuenta podrás acceder a todas estas ventajas:</p>
                <ul class="m0">
                    <li>Comentar en las noticias</li>
                    <li>Recibir nuestras newsletter informativas</li>
                    <li>Participar en sorteos</li>
                    <li>Recibir novedades, ofertas y promociones</li>
                </ul>
            </div>
        </div>
    </div>
</div>

{% endblock %}